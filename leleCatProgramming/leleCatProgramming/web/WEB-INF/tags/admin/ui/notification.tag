<%@ tag description="用户信息栏通知控件" pageEncoding="UTF-8" %>

<!-- start: 通知 -->
<li class="dropdown hover-line">
	<a href="#" data-toggle="dropdown">
		<i class="fa-bell-o"></i>
		<span class="badge badge-purple">2</span>
	</a>

	<ul class="dropdown-menu notifications">
		<li class="top">
			<p class="small">
				<a href="#" class="pull-right">全部标记为已读</a>
				您有 <strong>2</strong> 条新通知.
			</p>
		</li>

		<li>
			<!--
				class
				notification-success	绿色
				notification-danger		红色
				notification-info		蓝色
				notification-warning	橙色
				notification-primary	黑色
				notification-secondary	白色
			-->
			<ul class="dropdown-menu-list list-unstyled ps-scrollbar">
				<li class="active notification-success">
					<a href="#">
						<i class="fa-graduation-cap"></i>

						<span class="line">
							<strong>学堂模块</strong><br>
							务必在两周内添加 C 语言方向的课程.
